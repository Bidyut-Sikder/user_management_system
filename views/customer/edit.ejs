<div
  class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2">Customer</h1>

  <div class="btn-toolbar mb-2 mb-md-0">
    <button class="btn btn-sm btn-outline-secondary" href="/add">?</button>
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item active"><a href="/">Dashboard</a></li>
          <li class="breadcrumb-item active">New Customer</li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>Updated :<%= new Date(customer.updatedAt).toUTCString() %></b>
      <b>UserId</b>
    </div>
  </div>
</div> 

<form action="/edit/<%= customer.id %>?_method=PUT" method="POST"  >
 
  <div class="row form-group mb-4">
    <div class="col">
      <label for="fistName">First Name</label>
      <input
      value="<%= customer.firstName %>"
        required
        class="form-control"
        type="text"
        name="firstName"
        id="fistName"
      />
    </div>

    <div class="col">
      <label for="lastName">Last Name</label>
      <input
        required
        value="<%= customer.lastName %>"
        class="form-control"
        type="text"
        name="lastName"
        id="lastName"
      />
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="tel">Phone</label>
      <input value="<%= customer.phone %>"
       class="form-control" type="text" name="phone" id="phone" />
    </div>
    <div class="col">
      <label for="email">Email</label>
      <input  value="<%= customer.email %>"
      class="form-control" type="text" name="email" id="email" />
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="des">Description</label>
      <textarea name="description" rows="10" class="form-control"><%=customer.description %></textarea>
    </div>
  </div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Update Customer</button>

    <button 
    type="button"
    id="deleteButton"
    data-bs-toggle="modal" 
    data-bs-target="#deleteModal" 
     class="btn btn-danger">Delete Customer</button>
 
  </div>
</form>
<!-- data-bs-toggle="modal" 
data-bs-target="#deleteModal"  -->





<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal"  >
<div role="document" class="modal-dialog">
 <div class="modal-content">
  <div class="modal-header">
    <div class="modal-title">You are about ro remove a customer record</div>
    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>

  </div>

  <div class="modal-body">
    <p>
      This is remove the customer record of <b class="fw-bold"> <%= customer.lastName %></b>
    </br>
   </br>
   Are you sure?
    </p>
  </div>

    <div class="modal-footer">
      <button class="btn btn-secondary" type="button" data-bs-dismiss="modal"> Close</button>
      <form action="/edit/<%= customer.id %>?_method=DELETE" method="POST" class="position-relative">
      <button type="submit" class="btn btn-primary">Yes, Remove Customer </button>
    </form>
  </div>
  </div>

  </div>

</div>























